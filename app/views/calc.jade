doctype html
html
  head
    meta(charset='utf-8')
    title Calc
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Calculator
    h3 #{optName} #{x} #{symbol} #{y} = #{result}
    form(method='post', action='/calc')
      input(type='text', name='x', placeholder='X', autofocus=true)
      select(name='symbol')
        option +
        option -
        option *
        option /
      input(type='text', name='y', placeholder='Y')
      button Calculate


